<Window
    x:Class="SBCore.Configurator.EditWindows.VideoPreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    Title="Видео"
    Width="800"
    Height="600"
    x:ClassModifier="internal"
    Closing="WindowClosing"
    Loaded="WindowLoaded"
    mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommandExecuted" />
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu
            Grid.Row="0"
            Height="25"
            VerticalAlignment="Top">
            <MenuItem Header="Окно">
                <MenuItem Command="ApplicationCommands.Close" Header="Закрыть" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <DockPanel>
                <StatusBar DockPanel.Dock="Bottom" MouseDoubleClick="StatusBarMouseDoubleClick">
                    <StatusBarItem>
                        <TextBlock Name="StatusBlock" />
                    </StatusBarItem>
                </StatusBar>
                <GroupBox Margin="3" Header="_Камера">
                    <Grid>
                        <uc:VideoView
                            x:Name="VideoView"
                            Grid.Column="2"
                            MinWidth="100"
                            MinHeight="100"
                            Margin="5"
                            OpacityMask="#FFEBFFEB"
                            Visibility="Hidden" />
                        <FlowDocumentScrollViewer
                            x:Name="Log"
                            Margin="5"
                            HorizontalContentAlignment="Left"
                            Visibility="Hidden">
                            <FlowDocument
                                Name="Document"
                                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                FontFamily="Courier New"
                                FontSize="12" />
                        </FlowDocumentScrollViewer>
                        <Label
                            x:Name="WaitLabel"
                            Width="120"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Panel.ZIndex="100"
                            Background="White"
                            Content="Ожидайте..."
                            FontFamily="Lucida Sans Unicode"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="Red"
                            Visibility="Hidden" />
                    </Grid>
                </GroupBox>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
